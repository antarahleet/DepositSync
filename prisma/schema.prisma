generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Check {
  id          String   @id @default(cuid())
  checkNumber String?
  date        DateTime?
  amount      Float?
  memo        String?
  payor       String?
  payee       String?
  imageUrl    String
  status      CheckStatus @default(needs_review)
  createdAt   DateTime @default(now())

  @@map("Check")
  @@index([createdAt])
  @@index([checkNumber])
  @@index([payor])
  @@index([payee])
  @@index([memo])
}

enum CheckStatus {
  parsed
  needs_review
}
